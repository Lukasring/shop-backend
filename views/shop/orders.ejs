<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css" />
</head>
<%- include('../includes/navigation.ejs') %>
  <body>
    <main>
      <% if(orders.length > 0) {%>
        <ul class="cart__item-list">
          <% orders.forEach(order => {%> 
            <li class="cart__item">
              <h1>
                <%=order.id%>
              </h1>
              <ul>
                <% order.products.forEach(product => {%>
                  <li><%=product.title%></li>
                  <%}) %>
              </ul>
            </li>
            <%}) %>
        </ul>

        <%} else {%>
          <h1>No orders!</h1>
          <%}%>
    </main>

<%- include('../includes/end.ejs') %>